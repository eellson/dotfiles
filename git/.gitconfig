[user]
  name = Ed Ellson
  email = eellson@gmail.com

[alias]
  ci = commit -v
  co = checkout
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
  st = status

[push]
  default = simple

[commit]
  verbose = true

[core]
  excludesfile = ~/.gitignore
  editor = nvim
[credential]
  helper = osxkeychain
